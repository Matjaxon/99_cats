<form action="<%= action == :new ? cat_rental_requests_url : cat_rental_request_url(@cat_rental_request) %>"
  method="POST">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label>Choose cat :)
    <select name="cat_rental_request[cat_id]">
      <% @cats.each do |cat| %>
        <option value="<%= cat.id %>"<% if @cat_rental_request.cat_id == cat.id%> selected <% end %>>
          <%= cat.name %>
        </option>
      <% end %>
    </select>
  </label>

  <label>Choose your starting date
    <input type="date" name="cat_rental_request[start_date]" value="<%= @cat_rental_request.start_date %>">
  </label><br>

  <label>Choose your ending date
    <input type="date" name="cat_rental_request[end_date]" value="<%= @cat_rental_request.end_date %>">
  </label><br>

  <input type="submit" value="<%= action == :edit ? 'Edit Request' : 'Create Request' %>" >

</form>
